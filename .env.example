# Firebase Configuration (Required)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Mock API Configuration (Development)
NEXT_PUBLIC_USE_MOCK_APIS=true
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Production API Keys (Add when ready for production)
# PayFast
# PAYFAST_MERCHANT_ID=
# PAYFAST_MERCHANT_KEY=
# PAYFAST_PASSPHRASE=

# Ozow
# OZOW_API_KEY=
# OZOW_SITE_CODE=
# OZOW_PRIVATE_KEY=

# SnapScan
# SNAPSCAN_API_KEY=
# SNAPSCAN_MERCHANT_ID=

# South African Services
# ESKOM_SE_PUSH_API_KEY=
# OPENWEATHER_API_KEY=
# GOOGLE_MAPS_API_KEY=

# Uber Integration
# UBER_CLIENT_ID=
# UBER_CLIENT_SECRET=

# Bolt Integration  
# BOLT_API_KEY=

# SMS Provider (for South African numbers)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Email Provider
# RESEND_API_KEY=
# SMTP_FROM=noreply@eventza.co.za

# Security
# JWT_SECRET=your-jwt-secret
# ENCRYPTION_KEY=your-encryption-key

# Analytics
# GA_TRACKING_ID=
# MIXPANEL_TOKEN=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true