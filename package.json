{
  "name": "eventza",
  "version": "1.0.0",
  "description": "South African Event Management Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:admin": "turbo run dev --filter=admin-portal",
    "dev:user": "turbo run dev --filter=user-app",
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=admin-portal",
    "build:user": "turbo run build --filter=user-app",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "turbo": "^1.10.12",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}